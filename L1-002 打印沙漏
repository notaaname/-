#include <stdio.h>
int main()
{
    char c;
    int N;
    int row=0;
    scanf("%d %c",&N,&c);
    for(int i=0;i<N;i++)
    {
        if(2*i*(i+2)+1>N){//这里的公式原式是((2*i+1+3)*i/2)*2+1，等差数列求和，第一项是3第i项是2i+1
            row=i-1;//这句话就是找最大的行数是多少
            break;
        }
}
    for(int i=row;i>=1;i--){
        for(int k=row-i;k>=1;k--)printf(" ");//打印空格
        for(int j=2*i+1;j>=1;j--)printf("%c",c);//打印*
        printf("\n");
    }
    for(int i=0;i<row;i++)printf(" ");
    printf("%c\n",c);
    
    for(int i=1;i<=row;i++){
    
        for(int k=row-i;k>=1;k--)printf(" ");
        for(int j=2*i+1;j>=1;j--)printf("%c",c);
        printf("\n");
    }
    printf("%d",N-2*row*(row+2)-1);
    
}
