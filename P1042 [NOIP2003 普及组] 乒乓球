#include <iostream>
#include <string>
using namespace std;
int win[50000] = {0};
int w = 0, l = 0;
int main()
{
	
	
	char s;
	
	for (int i = 0; cin >> s && s != 'E'; i++)
	{
		if (s == 'W')win[i] = 1;
		else if (s == 'L')win[i] = 2;
	}
	//------------------------------11
	for (int i = 0; 1; i++)
	{
		if (win[i] == 1)w++;
		else if (win[i] == 2)l++;
		else if (win[i] == 0)
		{
			cout << w << ":" << l << endl << endl;
			break;
		}
		if (w - l >= 2 || l - w >= 2)
		{
			if (w >= 11 || l >= 11)
			{
				cout << w << ":" << l << endl;
				w = 0, l = 0;
			}
		}
	}
	w = 0, l = 0;
	//---------------------21
	for (int i = 0; 1; i++)
	{

		if (win[i] == 1)w++;
		else if (win[i] == 2)l++;
		else if (win[i] == 0)
		{
			cout << w << ":" << l << endl << endl;
			break;
		}
		if (w - l >= 2 || l - w >= 2)
		{
			if (w >= 21 || l >= 21)
			{
				cout << w << ":" << l << endl;
				w = 0, l = 0;
			}
		}
	}
	
	return 0;
}
